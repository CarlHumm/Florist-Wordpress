
{% set h_class = ' class="header ' ~ class ~ '"' %}
{% set h_role = ' role="' ~ role ~ '"' %}

<header{{ class ? h_class }}{{role ? h_role }}>
	{% block header_content %}
    <div class="container">
    <div class="row">
	<svg id="hamburger" class="ham hamRotate ham4" data-menu="site-navigation" data-duration="2" viewBox="0 0 100 100" width="80">
    <path
        class="line top"
        d="m 70,33 h -40 c 0,0 -8.5,-0.149796 -8.5,8.5 0,8.649796 8.5,8.5 8.5,8.5 h 20 v -20" />
    <path
        class="line middle"
        d="m 70,50 h -40" />
    <path
        class="line bottom"
        d="m 30,67 h 40 c 0,0 8.5,0.149796 8.5,-8.5 0,-8.649796 -8.5,-8.5 -8.5,-8.5 h -20 v 20" />
</svg>
    <div class="header-content">
	<h1 class="hdr-logo" role="banner">
		<a class="hdr-logo-link" href="{{site.url}}" rel="home">{{site.name}}</a>
	</h1>
	<nav id="nav-main" class="nav-main" data-menu="site-navigation" role="navigation">
		{% include "menu.twig" with {'menu': menu.get_items} %}
	</nav><!-- #nav -->
    </div>
    </div>
    </div>
	{% endblock %}
 </header>